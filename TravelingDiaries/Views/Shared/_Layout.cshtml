<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelingDiaries</title>

    @*Given*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*changed to bootswatch*@
    <link rel="stylesheet" href="~/css/BootswatchTheme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TravelingDiaries.styles.css" asp-append-version="true" />
    @*Till here*@

    <!-- CSS only for bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
@*for the incons*@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

@*taostr css*@
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"/>


    <style>
  
body{
    font-family:sans-serif;

  
}



    </style>

</head>
<body >
    <header>
       <nav class="navbar navbar-expand-lg navbar-dark hide-navigation-item" style="background:rgba(0,0,0, 0.3);width:100vw;height:12vh;margin-top:10px;margin-bottom:10px;margin-left:-10px; font-weight: 800;color:white;font-size: large;">
                 @*Logo Added*@
    <a class="navbar-brand" style="margin-top:0px;margin-right:50px;margin-left:20px">
      <div class="logo-image">
            <img src="~/Images/Travelling Diaries-logos.jpeg" style="width: 80px;
    
    
    border-radius: 50%;
    overflow: hidden;
    margin-top: 0px;" class="img-fluid">
      </div>
</a>

  <div class="container-fluid">

    

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor03">
      <ul class="navbar-nav me-auto" style="margin-top:5px;margin-left:8.5vw">
        <li class="nav-item">
          <a class="nav-link " asp-action="Index" asp-controller="Home">Home <i class="bi bi-house"></i>
            <span class="visually-hidden">(current)</span>
          </a>
        </li>
        <li class="nav-item">
          <a asp-action="GetAllPlaces"asp-controller="Place" class="nav-link">Packages <i class="bi bi-building"></i></a>
        </li>


         <li class="nav-item dropdown" >
          <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Flights <i class="bi bi-airplane-fill"></i></a>
          <div class="dropdown-menu" style="color:black;">
            <a style="color:black;" class="nav-link " asp-area="" asp-controller="FlightReservation" asp-action="FlightTable">Time-Table</a>
             <a style="color:black;" class="nav-link " asp-area="" asp-controller="FlightReservation" asp-action="SearchFlight">Search Flights</a>
               <a style="color:black;" class="nav-link " asp-area="" asp-controller="FlightReservation" asp-action="BookingCart">Your Bookings</a>
            <div class="dropdown-divider"></div>
            
          </div>
        </li>






                        <li><partial name = "_LoginPartial"/></li>

    
            <li class="nav-item dropdown">
         @await Component.InvokeAsync("CM")
        </li>

       <li class="nav-item">
          <a  asp-action="Index" asp-controller="ShoppingCart" class="nav-link" style="margin-left:100px";><i class="bi bi-cart3"></i>
               
              Basket  @await Component.InvokeAsync("CartValue")</a>
               
        </li>
      
        
      
      </ul>
    </div>
  </div>
</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  



    @*sweetalerts*@
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @*given*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @*till here*@



</body>
</html>
